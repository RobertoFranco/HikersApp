<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Hiker&apos;s Watch"
        android:id="@+id/titleTextView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="30sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Latitude: 00.000"
        android:id="@+id/LatTxtView"
        android:layout_below="@+id/titleTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:textAlignment="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Longitude: 00.000"
        android:id="@+id/LngTxtView"
        android:textAlignment="center"
        android:layout_below="@+id/LatTxtView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Accuracy: 00.0m"
        android:id="@+id/AccuracyTxtView"
        android:textAlignment="center"
        android:layout_below="@+id/LngTxtView"
        android:layout_centerHorizontal="true"
        android:onClick="MapBtnPressed" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Speed: 0.0m/s"
        android:id="@+id/SpeedTxtView"
        android:textAlignment="center"
        android:layout_below="@+id/AccuracyTxtView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Bearing: 0.0"
        android:id="@+id/BearingTxtView"
        android:textAlignment="center"
        android:layout_below="@+id/SpeedTxtView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Altitude: 0.0m"
        android:id="@+id/AltitudeTextView"
        android:textAlignment="center"
        android:layout_below="@+id/BearingTxtView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Address: "
        android:id="@+id/AddressTxtView"
        android:textAlignment="center"
        android:layout_below="@+id/AltitudeTextView"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MAP"
        android:id="@+id/MapBtn"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="MapBtnPressed" />
</RelativeLayout>